<h1>Eat-Da-Burger!</h1>

<div class = "col-md-4">
<h2>Burgers you want to eat!</h2>

<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button type="submit">Devour it!</button>
        </form>

      </li>
    {{/unless}}
  {{/each}}
</ul>

</div>

<div class = "col-md-4">

<h2>Burgers are devoured!</h2>

<ul>
  {{#each burgers}}
    {{#if this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="false">
          <button type="submit">undevour it!</button>
        </form>

      </li>
    {{/if}}
  {{/each}}
</ul>

</div>

<div class = "col-md-4">

<h2>Add a Burger</h2>
<form class="create-update-form" action="/" method="POST">

  <div class="form-group">
    <label for="ca">Burger name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="slee">Devoured?</label><br>
    <input type="radio" name="devoured" value="1"> Devoured?!<br>
    <input type="radio" name="devoured" value="0" checked> Undevoured
  </div>

  <button type="submit">Add Burger</button>
</form>

</div>

